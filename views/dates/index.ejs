<div class="row">
<div class="col-sm-8 col-md-8 col-lg-8 col-md-offset-2 showDate">
<br><br>

<form action="" method="POST" role="form">
  <!-- <legend>New Date</legend> -->
  <div class="form-group">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-md-offset-3">
      <label class="newDate" for="">Create a new date</label>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-md-offset-3">
        <input id="input-field" type="text" class="form-control" name="name" placeholder="Name your date">
      </div>
      <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
        <button id="submit-button" type="submit" class="btn btn-danger">Start</button>
      </div>
    </div>
  </div>
</form>
<div class="row">
  <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-md-offset-3">
    <% myDates.forEach(function(date){ %>
      <div class="well date">
        <div class="row">
          <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <form method='post' action="/dates/<%= date.id %>?_method=delete">
              <button type='submit' class='btn btn-lg btn-default glyphicon glyphicon-remove' ></button>
            </form>
          </div>
          <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
            <a id="date-show" href="/dates/<%=date.id%>"><%= date.title %></a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
</div>
</div>